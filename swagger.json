{
  "openapi": "3.0.0",
  "info": {
    "title": "Employee Task API",
    "description": "API documentation for managing employee tasks.",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "Local Server"
    }
  ],
  "paths": {
    "/{empId}/tasks": {
      "get": {
        "summary": "Get tasks for a specific employee.",
        "parameters": [
          {
            "name": "empId",
            "in": "path",
            "description": "Employee ID",
            "required": true,
            "schema": {
              "type": "number"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully retrieved tasks for the employee.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Task"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request. Invalid input or missing parameters."
          },
          "404": {
            "description": "No tasks found for the employee."
          },
          "500": {
            "description": "Internal server error."
          }
        }
      }
    },
    "/{empId}/tasks/{id}": {
      "delete": {
        "summary": "Delete a task by ID for a specific employee.",
        "parameters": [
          {
            "name": "empId",
            "in": "path",
            "description": "Employee ID",
            "required": true,
            "schema": {
              "type": "number"
            }
          },
          {
            "name": "id",
            "in": "path",
            "description": "Task ID",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully deleted the task."
          },
          "400": {
            "description": "Bad request. Invalid input or missing parameters."
          },
          "404": {
            "description": "Task not found."
          },
          "500": {
            "description": "Internal server error."
          }
        }
      },
      "put": {
        "summary": "Update a task by ID for a specific employee.",
        "parameters": [
          {
            "name": "empId",
            "in": "path",
            "description": "Employee ID",
            "required": true,
            "schema": {
              "type": "number"
            }
          },
          {
            "name": "id",
            "in": "path",
            "description": "Task ID",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "task",
            "in": "body",
            "description": "The updated task object.",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "description": {
                  "type": "string"
                },
                "title": {
                  "type": "string"
                },
                "content": {
                  "type": "string"
                },
                "done": {
                  "type": "boolean"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully updated the task.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Task"
                }
              }
            }
          },
          "400": {
            "description": "Bad request. Invalid input or missing parameters."
          },
          "404": {
            "description": "Task not found."
          },
          "500": {
            "description": "Internal server error."
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Task": {
        "type": "object",
        "properties": {
          "description": {
            "type": "string"
          },
          "empId": {
            "type": "number"
          },
          "title": {
            "type": "string"
          },
          "content": {
            "type": "string"
          },
          "done": {
            "type": "boolean",
            "default": false
          }
        }
      }
    }
  }
}
